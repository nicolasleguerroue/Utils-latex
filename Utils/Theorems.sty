\newtheorem{question}{Question} %new question #
\newtheorem{reponse}{$>>>$} %new answer #
\newtheorem{propriete}{Propriété} %new property #
\newtheorem{proposition}{Proposition} %new preposition #
\newtheorem{remarque}{Remarque} %new remarque #
