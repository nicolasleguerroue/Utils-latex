\RequirePackage{endnotes}  %Layout of endnote


\newcommand{\displayEndnotes}[1]{%Display end notes #tocName 
    \chapter*{#1}
    \hrulefill 
    \addcontentsline{toc}{chapter}{#1}
    \theendnotes 
    \bigskip
}
