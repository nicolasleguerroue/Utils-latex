\newcommand{\displayListOfTables}[1]{ %Display the lisy of tables #tocName
    \renewcommand{\listtablename}{#1}
    \addcontentsline{toc}{chapter}{#1}
    %\chapter*{#1}
    \vspace{-4cm}
    \listoftables
}



\newenvironment{tableFigure}[2] %Array of data as figure #headerArray title
{
    \begin{table}[h]
        \centering
        \newcommand{\TitleTable}%use var to print title #
        {#2}
    \begin{tabular}{#1}
}
{
    
    \end{tabular}
    \caption{\TitleTable}
    \end{table}%
}


\newcommand{\rowColor}[1]{ %Set color of row in table #color
    \rowcolor{#1}
}
\newcommand{\cellColor}[1]{ %Set color of cell in table #color
    \cellcolor{#1}
}
