\newcommand{\displayBibliography}[2]{%Display the bibliography #tocName filename(without.bib) 
    \bibliographystyle{plain}%plain, unsrt, IEEEtran
    \nocite{*}
    \bibliography{#2}
    \addcontentsline{toc}{chapter}{#1}
}
